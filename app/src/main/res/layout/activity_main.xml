<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:enabled="false"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:rowCount="6"
        android:columnCount="3">

        <ImageButton
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="5"
            tools:src="@drawable/backspace"
            android:background="@null"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/hangup_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hangup"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_row="5"
            android:layout_column="0"/>

        <ImageButton
            android:id="@+id/call_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:background="@null"
            android:layout_gravity="center"
            android:layout_row="5"
            android:layout_column="1"/>

        <Button
            android:id="@+id/nr_1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:text="1"
            />

        <Button
            android:id="@+id/nr_2_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="1"
            android:text="2"
            />

        <Button
            android:id="@+id/nr_3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="2"
            android:text="3"
            />

        <Button
            android:id="@+id/nr_4_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:text="4"
            />

        <Button
            android:id="@+id/nr_5_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="1"
            android:text="5"
            />

        <Button
            android:id="@+id/nr_6_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="2"
            android:text="6"
            />

        <Button
            android:id="@+id/nr_7_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="0"
            android:text="7"
            />

        <Button
            android:id="@+id/nr_8_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="1"
            android:text="8"
            />

        <Button
            android:id="@+id/nr_9_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="2"
            android:layout_column="2"
            android:text="9"
            />

        <Button
            android:id="@+id/star_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="0"
            android:text="*"
            />

        <Button
            android:id="@+id/nr_0_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="1"
            android:text="0"
            />

        <Button
            android:id="@+id/count_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_row="3"
            android:layout_column="2"
            android:text="#"/>


    </GridLayout>


</LinearLayout>